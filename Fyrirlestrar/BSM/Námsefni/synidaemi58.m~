function synidaemi58
%  Matlab forrit sem teiknar upp bestu margli?un?lgun ? gefnum gögnum
x=[0; 1; 2; 3; 4; 5; 6] 
y=[2.7; -0.5; -1.7; -1.9; -1.5; 0.2; 2.3 ] 
m=length(x); 

% Vi? leitum a? bestu margli?u af stigi 2 e?a l¿gri 
% og ?v? eru  grunnföllin eru 3 talsins. 
n=3; 

% Stu?lafylki? er A=(a_{ij}), a_{ij}=x_i^{j-1}  
A(1:m,1)=ones(m,1); 
A(1:m,2)=x; 
for j=3:n 
    A(1:m,j)=A(1:m,j-1).*x; 
end  
% Reiknum ?r ?r normaljöfnuhneppinu A^TAc=A^Ty:  
c=(A'*A)\(A'*y)

% Teikning undirb?in 
N=100;   
X=linspace(min(x),max(x),N); 

% Hli?run ? reikniriti horners er 0 
% 
hlidrun=zeros(n,1); 
for j=1:N 
   Y(j) = horner(c,hlidrun,X(j));
end 

figure 
plot(x,y,'*',X,Y) 
xlabel('x'), ylabel('y') 
title('Adferd minnstu fervika fyrir marglidu af stigi 2') 
print 